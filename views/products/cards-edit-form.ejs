<!DOCTYPE html>
<html lang="en">
   <head>
      <%- include('../partials/head')%>
      <link rel="stylesheet" href="/styles/detail/cards-form.css" />
   </head>
   <body>
      <%- include('../partials/navbar')%>
      <main class="form-body">
         <h1 class="card-form-title">Edit or update media card</h1>
         <article>
            <form
               action="/cards/edit/<%= cardToEdit.id %>?_method=put"
               method="post"
               class="form"
               enctype="multipart/form-data"
               id="card-form"
            >
               <div>
                  <label for="genres">Genres</label>
                  <input
                     type="text"
                     id="genres"
                     name="genres"
                     value="<%= cardToEdit.genre %>"
                  />
                  <div style="color: yellow">
                     <p class="error-genres field-feedback"></p>
                     <% if (locals.errors && errors.genres) { %>
                     <p class="errors"><%= errors.genres.msg %></p>
                     <% } %>
                  </div>
               </div>
               <section>
                  <label for="image">Image</label>
                  <input
                     type="file"
                     id="image"
                     name="image"
                     value="<%= cardToEdit.image %>"
                  />
                  <div style="color: yellow">
                     <p class="error-image field-feedback"></p>
                     <% if (locals.errors && errors.image) { %>
                     <p class="errors"><%= errors.image.msg %></p>
                     <% } %>
                  </div>
               </section>
               <section>
                  <label for="link">Trailer link's</label>
                  <input
                     type="text"
                     id="link"
                     name="link"
                     value="<%= cardToEdit.link %>"
                  />
                  <div style="color: yellow">
                     <p class="error-link field-feedback"></p>
                     <% if (locals.errors && errors.link) { %>
                     <p class="errors"><%= errors.link.msg %></p>
                     <% } %>
                  </div>
               </section>
               <section>
                  <label for="rating">Rating</label>
                  <input
                     type="number"
                     id="rating"
                     name="rating"
                     value="<%= cardToEdit.rating %>"
                  />
                  <div style="color: yellow">
                     <p class="error-rating field-feedback"></p>
                     <% if (locals.errors && errors.rating) { %>
                     <p class="errors"><%= errors.rating.msg %></p>
                     <% } %>
                  </div>
               </section>
               <section>
                  <label for="synopsis">Synopsis</label>
                  <input
                     type="text"
                     id="synopsis"
                     name="synopsis"
                     value="<%= cardToEdit.synopsis %>"
                  />
                  <div style="color: yellow">
                     <p class="error-synopsis field-feedback"></p>
                     <% if (locals.errors && errors.synopsis) { %>
                     <p class="errors"><%= errors.synopsis.msg %></p>
                     <% } %>
                  </div>
               </section>
               <section>
                  <label for="title">Title</label>
                  <input
                     type="text"
                     id="title"
                     name="title"
                     value="<%= cardToEdit.title %>"
                  />
                  <div style="color: yellow">
                     <p class="error-title field-feedback"></p>
                     <% if (locals.errors && errors.title) { %>
                     <p class="errors"><%= errors.title.msg %></p>
                     <% } %>
                  </div>
               </section>
               <section>
                  <label for="price">Price</label>
                  <input
                     type="text"
                     id="price"
                     name="price"
                     placeholder="0.99"
                     value="<%= cardToEdit.price%>"
                  />
                  <div style="color: yellow">
                     <p class="error-price field-feedback"></p>
                     <% if (locals.errors && errors.price) { %>
                     <p class="errors"><%= errors.price.msg %></p>
                     <% } %>
                  </div>
               </section>
               <section>
                  <label for="category">Category</label>
                  <select name="category" id="category">
                     <option value="Movie">Movie</option>
                     <option value="Serie">Serie</option>
                  </select>
               </section>
               <div>
                  <button type="submit">Confirm edit</button>
               </div>
            </form>
         </article>
         <article>
            <form
               action="/cards/delete/<%= cardToEdit.id %>?_method=delete"
               method="post"
               class="form"
            >
               <button type="submit">Delete card</button>
            </form>
         </article>
      </main>
      <%- include('../partials/footer')%>
      <script src="/scripts/validationsCard.js"></script>
   </body>
</html>
