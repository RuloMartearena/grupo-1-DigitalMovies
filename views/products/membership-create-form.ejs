<!DOCTYPE html>
<html lang="en">
   <head>
      <%- include('../partials/head')%>
      <link rel="stylesheet" href="/styles/membership/membership-form.css" />
   </head>
   <body>
      <%- include('../partials/navbar')%>
      <main class="form-body">
         <h1 class="membership-form-title">Create a new membership</h1>
         <article>
            <form
               action="/membership/create"
               method="post"
               class="form"
               id="membership-form"
            >
               <section>
                  <label for="description">Description</label>
                  <input
                     type="text"
                     id="description"
                     name="description"
                     placeholder="Subscribe to digital movies and enjoy the best benefits at an incredible price"
                     value="<%= locals.oldData ? oldData.description : null %>"
                  />
                  <div style="color: yellow">
                     <p class="error-description field-feedback"></p>
                     <% if (locals.errors && errors.description) { %>
                     <p class="errors"><%= errors.description.msg %></p>
                     <% } %>
                  </div>
               </section>
               <section>
                  <label for="discount0">Discount 1</label>
                  <input
                     type="text"
                     id="discount0"
                     name="discount0"
                     placeholder="Ticket discounts"
                     value="<%= locals.oldData ? oldData.discount0 : null %>"
                  />
                  <div style="color: yellow">
                     <p class="error-discount0 field-feedback"></p>
                     <% if (locals.errors && errors.discount0) { %>
                     <p class="errors"><%= errors.discount0.msg %></p>
                     <% } %>
                  </div>
               </section>
               <section>
                  <label for="discount1">Discount 2</label>
                  <input
                     type="text"
                     id="discount1"
                     name="discount1"
                     placeholder="Snack discounts"
                     value="<%= locals.oldData ? oldData.discount1 : null %>"
                  />
                  <div style="color: yellow">
                     <p class="error-discount1 field-feedback"></p>
                     <% if (locals.errors && errors.discount1) { %>
                     <p class="errors"><%= errors.discount1.msg %></p>
                     <% } %>
                  </div>
               </section>
               <section>
                  <label for="discount2">Discount 3</label>
                  <input
                     type="text"
                     id="discount2"
                     name="discount2"
                     placeholder="Access to selected digital movies"
                     value="<%= locals.oldData ? oldData.discount2 : null %>"
                  />
                  <div style="color: yellow">
                     <p class="error-discount2 field-feedback"></p>
                     <% if (locals.errors && errors.discount2) { %>
                     <p class="errors"><%= errors.discount2.msg %></p>
                     <% } %>
                  </div>
               </section>
               <section>
                  <label for="price">Price</label>
                  <input
                     type="text"
                     id="price"
                     name="price"
                     placeholder="1.99"
                     value="<%= locals.oldData ? oldData.price : null %>"
                  />
                  <div style="color: yellow">
                     <p class="error-price field-feedback"></p>
                     <% if (locals.errors && errors.price) { %>
                     <p class="errors"><%= errors.price.msg %></p>
                     <% } %>
                  </div>
               </section>
               <section>
                  <label for="tier">Tier</label>
                  <input
                     type="number"
                     id="tier"
                     name="tier"
                     placeholder="Only a number. Ex: 1"
                     value="<%= locals.oldData ? oldData.tier : null %>"
                  />
                  <div style="color: yellow">
                     <p class="error-tier field-feedback"></p>
                     <% if (locals.errors && errors.tier) { %>
                     <p class="errors"><%= errors.tier.msg %></p>
                     <% } %>
                  </div>
               </section>
               <div>
                  <button type="submit">Save ticket</button>
               </div>
            </form>
         </article>
      </main>
      <%- include('../partials/footer')%>
      <script src="/scripts/validationsMembership.js"></script>
   </body>
</html>
