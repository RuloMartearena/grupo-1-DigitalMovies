<!DOCTYPE html>
<html lang="en">
   <head>
      <%- include('../../partials/head')%>
      <!-- Styles -->
      <link rel="stylesheet" href="/styles/login/login-page.css" >
      <!-- Fonts -->
      <link href="https://fonts.googleapis.com/css2?family=Montserrat+Alternates&display=swap" rel="stylesheet">
      <!-- -->
      <link rel="preconnect" href="https://fonts.googleapis.com">
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
      <title>Sign in</title>
      <!-- Test -->
   </head>
   <body class="background">
      <%- include('../../partials/header')%>
    <main>
        <section class="hero">
            <video autoplay muted loop  plays-inline id="myVideo">
                <source src="/videos/Barbie-trailer.mp4"  type="video/mp4">
            </video>
        </section>
        <section class="login-page">
         <div class="page-card">
            <div class="welcome-logo">
                <p>Welcome</p>
            </div>
            <section>
                <form action="/" method="POST">
                    <label for="email">Email</label> 
                    <input type="email" id="email" required class="email" name="email" placeholder="Email">
                    <label for="password">Password</label>
                    <input type="password" id="password" required class="password" name="password" placeholder="Password" autocomplete="on">
                    <p>Remember username and password?</p>
                    <div class="remember-check">
                        <label for="remember-usser">Ussername <input type="checkbox" id="remember-usser" class="remember-usser" name="remember-usser"></label>
                        <label for="remember-pass">Password <input type="checkbox" id="remember-pass" class="remember-pass" name="remember-pass"></label>
                    </div> 
                    <a href="/" class="bn3637 bn38">Sign in</a>
                </form>
            </section>
            <p><a href="" class="register-link"" >Forgot password?</a></p>
            <p><a href="/register" class="register-link">Don't have an account?</a></p>
        </div>
    </section>
    </main>
    <%- include('../../partials/footer')%>
   </body>
</html>
